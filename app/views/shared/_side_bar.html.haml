.sidebar
  .sidebar__header
    .sidebar__header--block
      %h3.sidebar__header--block--p
        = current_user.name
      .sidebar__header--block--icon
        = link_to new_group_path do
          = icon('fas','edit',class: 'icon')

        = link_to edit_user_path(current_user) do
          = icon('fas','cog',class: 'icon')
  .sidebar__scl
    .sidebar__scl__body
      - current_user.groups.each do |group|
        .sidebar__scl__body--block
          = link_to group_messages_path(group) do
            .sidebar__scl__body--block--title
              = group.name
          .sidebar__scl__body--block--p
            = group.show_last_message